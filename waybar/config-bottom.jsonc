// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 2, // Gaps between modules (4px)
    // Choose the order of the modules
    "margin": "5, 30, 0, 30",
    "modules-left": [
	"temperature",
	"pulseaudio",
	"network"
    ],
    "modules-center": [
        "tray"
    ],
    "modules-right": [
        //"mpd",
       // "idle_inhibitor",
        "power-profiles-daemon",
        "backlight",
        "battery"
       // "custom/power"
    ],
    // Modules configuration
    // "sway/workspaces": {
    //     "disable-scroll": true,
    //     "all-outputs": true,
    //     "warp-on-scroll": false,
    //     "format": "{name}: {icon}",
    //     "format-icons": {
    //         "1": "",
    //         "2": "",
    //         "3": "",
    //         "4": "",
    //         "5": "",
    //         "urgent": "",
    //         "focused": "",
    //         "default": ""
    //     }
    // },

    "tray": {
        "icon-size": 21,
        "spacing": 10,
        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },
    "temperature": {
        //"thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "[ {temperatureC}°C TEMP ]",
        "format-icons": ["", "", ""]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "[ BL {percent}% ]",
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "[ {capacity}% BAT ]",
        "format-full": "[ {capacity}% FULL ]",
        "format-charging": "[ {capacity}% CHG ]",
        "format-plugged": "[ {capacity}% CHG ]",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
    },

    "power-profiles-daemon": {
      "format": "[ {icon} ]",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "PER",
        "performance": "PER",
        "balanced": "BAL",
        "power-saver": "SAV"
      }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "[ WLAN: {essid} {signalStrength}% ]",
        "format-ethernet": "[ LAN: {ipaddr}/{cidr} ]",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "[ Disconnected ]",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "[ {volume}% VOL --- {format_source} ]",
        "format-muted": "MUTED {format_source}",
        "format-source": "{volume}% MIC",
        "format-source-muted": "MIC MUTED",
        "on-click": "pavucontrol"
    },
}
