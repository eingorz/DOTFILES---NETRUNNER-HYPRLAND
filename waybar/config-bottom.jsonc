    "hyprland/workspaces": {
	"format": "{icon}",
	"format-icons": {
		"1": "TERM",
		"2": "NET",
		"3": "DISC",
		"4": "GAME",
		"5": "SPOT",
		"6": "TMP",
		"default": "TMP-X"
	},
	"persistent-workspaces": {
		"*": [1,2,3,4,5,6] // 5 workspaces by default on every monitor
	}
},



    "idle_inhibitor": {
