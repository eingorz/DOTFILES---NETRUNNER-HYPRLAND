    "hyprland/workspaces": {
	"format": "{icon}",
	"format-icons": {
		"1": "TERM",
		"2": "NET",
		"3": "DISC",
		"4": "GAME",
		"5": "SPOT",
		"6": "WORK",
		"7": "NOTE",
		"8": "TMP",
		"default": "TMP-X"
	},
        "persistent-workspaces": {
            "*": [1,2,3,4,5,6,7] // 5 workspaces by default on every monitor
        }
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    "cpu": {
        "format": "{icon} CPU",
        "format-alt": "{avg_frequency} GHz",
        "interval": 3,
	"format-icons": {
